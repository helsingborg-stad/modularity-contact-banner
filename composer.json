{
    "name": "helsingborg-stad/modularity-contact-banner",
    "description": "Contact Banner",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Thulin",
            "email": "sebastian.thulin@helsingborg.se"
        }
    ],
    "minimum-stability": "stable",
    "require": {},
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/helsingborg-stad/modularity-contact-banner.git"
        }
    ],
    "extra" : {
        "builder": {
            "commands": [
                "npm ci --no-progress --no-audit",
                "npx --yes browserslist@latest --update-db",
                "npm run build"
            ],
            "removables": [
                ".git",
                ".gitignore",
                ".github",
                "build.php",
                "composer.json",
                "composer.lock",
                "webpack.config.js",
                "node_modules",
                "package-lock.json",
                "package.json"
            ]
        }
    }
}
