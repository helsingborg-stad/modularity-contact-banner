{
    "name": "helsingborg-stad/modularity-contact-banner",
    "description": "Contact Banner",
    "type": "wordpress-plugin",
    "license": "MIT",
    "extra": {
        "installer-paths": {
            "vendor/{$vendor}/{$name}": [
                "type:wordpress-muplugin",
                "type:wordpress-theme",
                "type:wordpress-plugin",
                "type:acf-plugin"
            ]
        }
    },
    "authors": [
        {
            "name": "Sebastian Thulin",
            "email": "sebastian.thulin@helsingborg.se"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit --no-coverage --testdox",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --testdox",
        "lint": "vendor/bin/mago lint",
        "fix": "vendor/bin/mago lint --format-after-fix --fix",
        "format": "vendor/bin/mago fmt"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/helsingborg-stad/modularity-contact-banner.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "ModularityContactBanner\\": "source/php/"
        }
    },
    "require": {
        "helsingborg-stad/municipio": "^6.0.0",
        "helsingborg-stad/wputilservice": "^0.2.44",
        "helsingborg-stad/wpservice": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "carthage-software/mago": "^1.0.0-rc.3"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "carthage-software/mago": true
        }
    },
    "version": "4.0.0"
}
